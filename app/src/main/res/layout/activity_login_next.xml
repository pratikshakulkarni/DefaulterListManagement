<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="psk.com.recyclerview.LoginNext">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="#ff1606"
        android:gravity="center"
        android:text="SELECT SUBJECT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fbfff1"
        android:textSize="30sp"
        android:textStyle="bold" />


    <CheckBox

        android:id="@+id/db"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="DBMS" />

    <CheckBox

        android:id="@+id/se"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/db"
        android:layout_alignStart="@+id/db"
        android:layout_alignTop="@+id/db"
        android:layout_marginTop="59dp"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="SEPM" />

    <CheckBox

        android:id="@+id/is"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/db"
        android:layout_alignStart="@+id/db"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="32dp"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="ISEE" />

    <CheckBox
        android:layout_marginTop="20dp"
        android:id="@+id/cn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/se"
        android:layout_alignStart="@+id/se"
        android:layout_below="@+id/se"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="CN" />

    <CheckBox

        android:id="@+id/toc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cn"
        android:layout_alignStart="@+id/cn"
        android:layout_below="@+id/cn"
        android:layout_marginTop="33dp"
        android:button="@null"
        android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
        android:text="TOC" />



</RelativeLayout>
